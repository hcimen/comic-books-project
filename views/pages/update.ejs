<%- include('../partials/head') -%> 

<%- include('../partials/nav') -%> 




<div class="outside"> <br><br><br><br><br>
    <div class="main-body">    
    <h1>UPDATE COMIC</h1>
    <form class="createForm" action="/admin-console/update-book/<%= inventoryItem._id %>?_method=PUT" method="POST">
    <div class="responsive-form">
        
    <label for="new">New: </label>
    <input type="text" name="new" id="new" placeholder="New"> <br> <br>

    <label for="title">Title: </label>
    <input type="text" name="title" id="title" value="<%= inventoryItem.title %>" required> <br> <br>
    
    <label for="author">Author: </label>
    <input type="text" name="author" id="author" value="<%= inventoryItem.author %>" required> <br> <br> 

    <label for="publisher">Publisher: </label>
    <select name="publisher" id="publisher">
        <option value="BOOM! Box"> BOOM! Box </option>
        <option value="DC Comics"> DC Comics </option>
        <option value="Harry N. Abrams">Harry N. Abrams</option>
        <option value="Icon Books">Icon Books</option>
        <option value="Image Comics">Image Comics</option>
        <option value="Marvel">Marvel</option>
        <option value="Simon & Schuster">Simon & Schuster</option>
        <option value="Top Shelf Productions">Top Shelf Productions</option>
        <option value="VIZ Media LLC">VIZ Media LLC</option>
        <option value="<%= inventoryItem.publisher %>" selected><%= inventoryItem.publisher %></option>
    </select> <br> <br>

    <label for="genre">Genre: </label>
    <input type="text" name="genre" id="genre" value="<%= inventoryItem.genre %>"> <br> <br>

    <label for="pages">Number of Pages: </label>
    <input type="number" name="pages" id="pages" value="<%= inventoryItem.pages %>"> <br> <br>

    <label for="rating">Rating: </label>
    <input type="number" name="rating" id="rating" value="<%= inventoryItem.rating %>" min="0" max="5"> <br> <br>

    <label for="synopsis">Synopsis: </label>
    <textarea name="synopsis" id="synopsis" cols="20" rows="2"><%= inventoryItem.synopsis %></textarea><br><br>

    <label for="image">Image: </label>
    <input type="type" name="image" id="image" value=""><%= inventoryItem.image %></input> <br><br><br>
    </div>

    <button type="submit" id="Submit" class="delete"> Submit </button>

</form>

</div> <br><br><br><br><br>
</div>

<%- include('../partials/footer') -%> 